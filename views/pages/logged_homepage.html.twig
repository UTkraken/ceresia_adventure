<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/x-icon" href="{{ assets("img/favicon.png") }}">

    {% block css %}
        <link rel="stylesheet" href="{{ assets("css/main.css") }}">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ assets("css/homepage/homepage.css") }}">
        <script src="https://kit.fontawesome.com/e418fd3bd4.js" crossorigin="anonymous"></script>

    {% endblock %}

    {% block title %}
        <title>Ceresia Adventure</title>
    {% endblock %}

    {% block content %}
        <div class="hearder_hp">
            <p>Ceresia</p>
            <img src="{{ assets("img/ceresia_white.png") }}" alt="Logo">
            <p>Adventure</p>
        </div>


        <div class="text_container">
            <p class="text_row">
                Cliquer sur un parcours pour lancer la partie !
            </p>
        </div>

        <div class="list_container">
            <h3>Listes des parcours</h3>
            <div class="item_container header_list">
                <p>Nom Parcours</p>
                <div class="item_contrainte_title">
                    <p>Localisation</p>
                    <p>Dur√©e</p>
                    <p>Note</p>
                </div>
            </div>
            {% for data in data_trails %}
                <div class="item_container" data-id="{{ data.trail_id }}">
                    <p>{{ data.name }}</p>
                    <div class="item_contrainte">
                        <p>{{ data.departement }}</p>
                        <p>{{ data.estimated_time }}</p>
                        <p>{{ data.rating }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% endblock %}


    {% block js %}
        <script
                src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                crossorigin="anonymous"></script>
        <script
                src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"
                integrity="sha256-eTyxS0rkjpLEo16uXTS0uVCS4815lc40K2iVpWDvdSY="
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>

        <script type="text/javascript" src="{{ assets("js/main.js") }}"></script>
        <script type="text/javascript" src="{{ assets("js/playable.js") }}"></script>
    {% endblock %}

</html>