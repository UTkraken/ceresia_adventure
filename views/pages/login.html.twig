{% extends "accueil.html.twig" %}

    {% block title %}
        <title>Connexion</title>
    {% endblock %}

{% block content %}

    {% block sidebar %}{% endblock %}
    {% block header %}{% endblock %}
<div id="error">
    {%  if not(session.userInfo is defined) %}
        {{ errorMessage }}
    {% endif %}
    {% if errorMessage is defined %}
        {{ errorMessage }}
    {% endif %}
</div>
<div id="loginBackground"></div>
    <div id="formContainer">
        <form action="/login/connexionForm" method="POST" id="login_form">
            <div id="formImage">
                <img src="{{ assets("img/logo_with_back.png") }}" alt="">
            </div>
            <div class="form_row">
                <img src="{{ assets("img/mail.png") }}" alt="Mail" class="input_logo">
                <input type="email" name="email" placeholder="Email" autocomplete="email" required>
            </div>
            <div class="form_row">
                <img src="{{ assets("img/password.png") }}" alt="Mot de passe" class="input_logo">
                <input type="password" name="password" placeholder="Mot de passe" autocomplete="current-password" required>
            </div>
            <div class="form_submit ">
                <input type="submit" value="Connexion">
            </div>
            <p> Pas encore de compte ? <a href="/inscription">Inscrivez-vous !</a></p>
        </form>
    </div>


{% endblock %}
